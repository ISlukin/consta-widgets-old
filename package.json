{
  "name": "@csssr/gpn-components",
  "version": "1.0.16-beta.2",
  "main": "lib/index.js",
  "author": "CSSSR",
  "license": "UNLICENSED",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "!lib/*.css.d.ts",
    "!lib/**/__tests__",
    "!lib/**/example-data",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.mock.d.ts",
    "!lib/**/*.stories.d.ts"
  ],
  "scripts": {
    "build": "yarn generate-css-types && ROOT_PATH=./ NODE_ENV=production webpack --config webpack/webpack.config.js",
    "build:watch": "yarn generate-css-types && ROOT_PATH=./ NODE_ENV=development webpack --config webpack/webpack.config.js --watch",
    "build:analyze": "ANALYZE=1 yarn build",
    "storybook": "NODE_ENV=development ROOT_PATH=./ NODE_PATH=./node_modules start-storybook -p 6006 --ci",
    "storybook:build": "NODE_ENV=production ROOT_PATH=./ NODE_PATH=./node_modules build-storybook -o build/storybook",
    "lint": "npm-run-all --parallel lint:*",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "lint-fix": "npm-run-all format lint-fix:*",
    "lint:ts": "eslint '{src,types}/**/*.ts{,x}'",
    "lint-fix:ts": "eslint '{src,types}/**/*.ts{,x}' --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint-fix:css": "stylelint 'src/**/*.css' --fix",
    "generate-css-types": "node node_modules/@csssr/gpn-configs/scripts/generate-css-types.js",
    "checktypes": "yarn generate-css-types && tsc --noEmit --extendedDiagnostics",
    "unit": "NODE_PATH=./node_modules TZ=Europe/Moscow jest --coverage",
    "unit:watch": "yarn unit --watchAll",
    "test": "npm-run-all --parallel lint checktypes unit",
    "prepublishOnly": "yarn build && node node_modules/@csssr/gpn-configs/scripts/typescript-validations.js",
    "prepare": "yarn install-peers",
    "danger-ci": "danger ci"
  },
  "browserslist": [
    "Chrome >= 75"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checktypes",
      "post-checkout": "node node_modules/@csssr/gpn-configs/scripts/checkout-clean.js && yarn generate-css-types"
    }
  },
  "lint-staged": {
    "{src,types}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "{src}/**/*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "{src,scripts,config}/**/*.{json,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "@gpn-design/uikit": "1.1.2",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "dependencies": {
    "@amcharts/amcharts4-geodata": "4.1.9",
    "@csssr/gpn-utils": "0.2.13",
    "@types/d3": "5.7.2",
    "@types/resize-observer-browser": "0.1.2",
    "classnames": "2.2.6",
    "d3": "5.12.0",
    "date-fns": "2.9.0",
    "lodash": "4.17.11",
    "react-dnd": "9.3.2",
    "react-dnd-html5-backend": "9.3.2",
    "react-textfit": "1.1.0",
    "react-uid": "2.2.0"
  },
  "resolutions": {
    "@types/react": "16.9.34",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@csssr/gpn-configs": "0.2.25",
    "@mdx-js/loader": "1.5.9",
    "@storybook/addon-actions": "5.3.18",
    "@storybook/addon-docs": "5.3.18",
    "@storybook/addon-info": "5.3.18",
    "@storybook/addon-knobs": "5.3.18",
    "@storybook/react": "5.3.18",
    "@storybook/theming": "5.3.18",
    "@types/classnames": "2.2.9",
    "@types/geojson": "7946.0.7",
    "@types/lodash": "4.14.135",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.7",
    "@types/react-test-renderer": "16.9.2",
    "babel-loader": "8.0.6",
    "clean-webpack-plugin": "3.0.0",
    "danger": "10.2.0",
    "fast-glob": "3.2.2",
    "husky": "3.0.0",
    "install-peers-cli": "https://github.com/evless/install-peers-cli#fix-yarn-policies",
    "mockdate": "2.0.5",
    "npm-run-all": "4.1.5",
    "postcss-functions": "3.0.0",
    "react-test-renderer": "16.8.6",
    "remark-external-links": "6.0.0",
    "remark-slug": "6.0.0",
    "storybook-addon-react-docgen": "1.2.28",
    "storybook-addon-smart-knobs": "6.0.2",
    "terser-webpack-plugin": "1.3.0",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.9",
    "webpack-merge": "4.2.2"
  },
  "engines": {
    "node": ">=13",
    "yarn": ">=1.19.1"
  }
}
