{
  "name": "@gaz/dashboard-constructor",
  "version": "1.0.15",
  "main": "lib/index.js",
  "author": "CSSSR",
  "license": "UNLICENSED",
  "types": "lib/@types/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn generate-css-types && ROOT_PATH=./ NODE_ENV=production webpack --config node_modules/@gaz/configs/config/webpack/library.webpack.js",
    "build:watch": "yarn generate-css-types && ROOT_PATH=./ NODE_ENV=development webpack --config node_modules/@gaz/configs/config/webpack/library.webpack.js --watch",
    "storybook": "NODE_ENV=development ROOT_PATH=./ NODE_PATH=./node_modules start-storybook -c node_modules/@gaz/configs/config/storybook -p 6006 --ci",
    "storybook:build": "NODE_ENV=production ROOT_PATH=./ NODE_PATH=./node_modules build-storybook -c node_modules/@gaz/configs/config/storybook -o build/storybook",
    "lint": "npm-run-all --parallel lint:*",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "lint-fix": "npm-run-all format lint-fix:*",
    "lint:ts": "eslint '{src,types}/**/*.ts{,x}'",
    "lint-fix:ts": "eslint '{src,types}/**/*.ts{,x}' --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint-fix:css": "stylelint 'src/**/*.css' --fix",
    "generate-css-types": "node node_modules/@gaz/configs/scripts/generate-css-types.js",
    "checktypes": "yarn generate-css-types && tsc --noEmit --extendedDiagnostics",
    "unit": "TZ=Europe/Moscow jest",
    "test": "npm-run-all --parallel lint checktypes unit",
    "prepublishOnly": "yarn build"
  },
  "browserslist": [
    "Chrome >= 75"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checktypes",
      "post-checkout": "node node_modules/@gaz/configs/scripts/checkout-clean.js"
    }
  },
  "lint-staged": {
    "{src,types}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "{src}/**/*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "{src,scripts,config}/**/*.{json,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@gaz/utils": "0.1.6",
    "classnames": "2.2.6",
    "d3": "5.12.0",
    "lodash": "4.17.11",
    "react": "16.8.6",
    "react-dnd": "9.3.2",
    "react-dnd-html5-backend": "9.3.2",
    "react-dom": "16.8.6",
    "react-grid-layout-tmp-fork": "0.18.0",
    "react-onclickout": "2.0.8",
    "react-uid": "2.2.0",
    "react-use-dimensions": "1.2.1"
  },
  "resolutions": {
    "@types/react": "16.8.23"
  },
  "devDependencies": {
    "@gaz/configs": "0.1.27",
    "@storybook/addon-actions": "5.2.5",
    "@storybook/addon-info": "5.2.5",
    "@storybook/addon-knobs": "5.2.5",
    "@storybook/react": "5.2.5",
    "@types/classnames": "2.2.9",
    "@types/d3": "5.7.2",
    "@types/lodash": "4.14.135",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.5",
    "@types/react-grid-layout": "0.16.6",
    "babel-loader": "8.0.6",
    "css-loader": "3.0.0",
    "css-modules-typescript-loader": "2.0.4",
    "file-loader": "4.0.0",
    "husky": "3.0.0",
    "mini-css-extract-plugin": "0.7.0",
    "npm-run-all": "4.1.5",
    "ora": "3.4.0",
    "storybook-addon-react-docgen": "1.2.6",
    "storybook-addon-smart-knobs": "6.0.0",
    "webpack-cli": "3.3.9"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1.16"
  }
}
