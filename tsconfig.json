{
  "extends": "@gaz/configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/modules/*"],
      "@/*": ["src/*"],
      "@amcharts/amcharts4-geodata/*": ["src/amcharts-stub"],
      "@amcharts/amcharts4-geodata/lang/*": ["@amcharts/amcharts4-geodata/lang"]
    },
    "declarationDir": "lib/@types"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "build",
    "__tests__"
  ]
}
