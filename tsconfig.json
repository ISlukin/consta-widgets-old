{
  "extends": "@gaz/configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/modules/*"],
      "@/*": ["src/*"]
    },
    "declarationDir": "lib/@types"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "build",
    "__tests__"
  ]
}
