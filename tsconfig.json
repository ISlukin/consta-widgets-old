{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "allowUnusedLabels": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/ts",
    "paths": {
      "lodash/*": ["node_modules/@types/lodash-es/*"],
      "*": ["types/modules/*"],
      "@/*": ["src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "node_modules/jest-enzyme"
  ],
  "exclude": ["build", "__tests__"]
}
